<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Imagen del usuario -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivReviewerImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_placeholder_profile"
        android:layout_marginEnd="12dp" />

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nombre + botón de opciones -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Nombre del usuario -->
            <TextView
                android:id="@+id/tvReviewerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del usuario"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Botón de tres puntos en esquina superior derecha -->
            <ImageView
                android:id="@+id/btnOptions"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_more"
                android:contentDescription="Opciones"
                android:tint="#666666"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Carrera -->
        <TextView
            android:id="@+id/tvReviewerCareer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carrera"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <!-- Estrellas -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:isIndicator="true"
            android:layout_marginTop="4dp"
            android:progressTint="#FFD700"
            android:secondaryProgressTint="#FFD700"
            android:indeterminateTint="#FFD700"/>

        <!-- Comentario -->
        <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comentario del usuario"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>