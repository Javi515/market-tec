<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/titleCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person"
                    android:scaleType="centerCrop"
                    android:contentDescription="Foto de perfil"
                    android:background="@drawable/avatar_circle_bg"
                    android:clipToOutline="true" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabChangePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:clickable="true"
                    android:focusable="true"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_camera_alt"
                    app:tint="#444444"
                    app:backgroundTint="@android:color/white"
                    android:layout_marginEnd="-8dp"
                    android:layout_marginBottom="-8dp"
                    android:contentDescription="Cambiar foto de perfil" />

            </FrameLayout>

            <TextView
                android:id="@+id/textNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Cargando Nombre..."
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#212121"/>

            <TextView
                android:id="@+id/textCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando Correo..."
                android:textSize="14sp"
                android:textColor="#8A8A8A"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnEditarPerfil"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Editar Perfil"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#0000FF"
            app:cornerRadius="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"
            android:layout_marginVertical="16dp"/>

        <TextView
            android:id="@+id/rowCompras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis compras"
            android:textColor="#212121"
            android:textSize="16sp"
            android:paddingVertical="14dp"
            android:drawableStart="@drawable/ic_shopping_cart"
            android:drawableTint="#444444"
            android:drawablePadding="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/rowMisVentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis ventas"
            android:textColor="#212121"
            android:textSize="16sp"
            android:paddingVertical="4dp"
            android:drawableStart="@drawable/ic_shopping_cart"
            android:drawableTint="#444444"
            android:drawablePadding="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>


        <TextView
            android:id="@+id/rowChats" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chats" android:textColor="#212121"
            android:textSize="16sp"
            android:paddingVertical="14dp"
            android:drawableStart="@drawable/baseline_chat_64" android:drawableTint="#444444"
            android:drawablePadding="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"
            android:layout_marginVertical="12dp"/>

        <TextView
            android:id="@+id/rowVender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vender"
            android:textColor="#212121"
            android:textSize="16sp"
            android:paddingVertical="14dp"
            android:drawableStart="@drawable/baseline_storefront_24"
            android:drawableTint="#444444"
            android:drawablePadding="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/rowPublicaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publicaciones"
            android:textColor="#212121"
            android:textSize="16sp"
            android:paddingVertical="14dp"
            android:drawableStart="@drawable/ic_person"
            android:drawableTint="#444444"
            android:drawablePadding="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"
            android:layout_marginVertical="12dp"/>

        <TextView
            android:id="@+id/rowLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesiÃ³n"
            android:textColor="#E53935"
            android:textSize="16sp"
            android:paddingVertical="14dp"
            android:drawableStart="@drawable/outline_logout_24"
            android:drawableTint="#E53935"
            android:drawablePadding="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>
    </LinearLayout>
</ScrollView>